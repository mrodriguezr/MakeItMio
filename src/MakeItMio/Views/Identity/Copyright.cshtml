@using MakeItMio.Repositories
@using Template = MakeItMio.Templates.Templates;

@model Sitecore.Mvc.Presentation.RenderingModel

@{
    var identity = IdentityRepository.Get(Model.Item);
    if (identity == null)
    {
        return;
    }
}

<div class="container">
    <div class="row">
        <small class="copyright">
            @Html.Sitecore().Field(Template.Identity.Fields.Copyright.ToString(), identity)
        </small>
    </div>
</div>
